{{ template "base" .}}

{{define "title"}}Snippet #{{.Snippet.ID}} {{end}}

{{define "body"}}
    {{with .Snippet}}
        <div class="snippet">
            <div class="metadata">
                <string>{{.Title}}</string>
                <span>#{{.ID}}</span>
            </div>
            {{ len nil}}
            <pre><code>{{.Content}}</code></pre>
            <div class="metadata">
                <time>Created : {{.Created}}</time>
                <time>Expires : {{.Expires}}</time>
            </div>
        </div>
    {{end}}
{{end}}